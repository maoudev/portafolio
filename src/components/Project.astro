---
interface Props {
  title: string;
  description: string;
  technologies: string[];
  image: string;
  url: string;
}

const { title, description, technologies, image, url } = Astro.props;
---

<a href={url} title={"Ver código fuente de " + title} rel="noopener">
  <article
    class="hover:scale-105 bg-gray-100 bg-opacity-5 border border-[rgba(155,155,155,0.2)] shadow-md rounded-lg overflow-hidden max-w-sm mx-auto hover:shadow-lg transition-shadow duration-300 ease-in-out"
  >
    <img
      src={image}
      alt={"Vista previa del proyecto " + title}
      class="w-full h-48 bg-black bg-opacity-45"
    />

    <div class="p-4">
      <h3 class="text-xl font-semibold text-white mb-2">
        {title}
      </h3>

      <p class="text-gray-300 text-base mb-4">
        {description}
      </p>

      <section aria-labelledby="technologies">
        <h4 id="technologies" class="text-gray-300 font-semibold mb-2">
          Tecnologías:
        </h4>
        <ul class="flex flex-wrap gap-2">
          {
            technologies.map((technology) => (
              <li class="bg-gray-200 bg-opacity-10 text-gray-300 px-2 py-1 rounded-md text-sm">
                {technology}
              </li>
            ))
          }
        </ul>
      </section>
    </div>
  </article>
</a>

<style>
  img {
    object-fit: contain;
  }
</style>
